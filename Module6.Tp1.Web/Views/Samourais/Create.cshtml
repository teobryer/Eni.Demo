@model SamouraiViewModel



@{ ViewData["Title"] = "Create";

    var armes = (List<ArmeViewModel>)this.ViewData["armes"];
    var selectArmes = armes.Select(i => new SelectListItem(i.Nom, i.Id.ToString()));



    var artsMartiaux = (List<ArtMartialViewModel>)this.ViewData["artsMartiaux"];
    var selectArtsMartiaux = artsMartiaux.Select(i => new SelectListItem(i.Nom, i.Id.ToString()));
}

<h1>Create</h1>

<h4>Samourai</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Force" class="control-label"></label>
                <input asp-for="Force" class="form-control" />
                <span asp-validation-for="Force" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ArmeId" class="control-label"></label>
                <select asp-for="ArmeId" asp-items="@selectArmes"></select>
                <span asp-validation-for="ArmeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ListeArtsMartiauxId" class="control-label"></label>
                <select asp-for="ListeArtsMartiauxId" asp-items=" @selectArtsMartiaux"></select>
                <span asp-validation-for="ListeArtsMartiauxId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
