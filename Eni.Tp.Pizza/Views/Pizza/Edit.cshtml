@model Eni.TP_Pizza.Models.Pizza
@using Eni.TP_Pizza.Extensions


@{ ViewData["Title"] = "Edit";
    var ingredients = (List<Ingredient>)this.ViewData["ingredients"];
    var selectIngredients = ingredients.Select(i => new SelectListItem(i.Nom, i.Id.ToString()));

    var pates = (List<Pate>)this.ViewData["pates"];
    var selectPate = pates.Select(i => new SelectListItem(i.Nom, i.Id.ToString()));
}

<h1>Edit</h1>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>



                <label asp-for="Pate" class="control-label"></label>
                <select asp-for="PateId" asp-items="@selectPate"></select>
                <span asp-validation-for="Pate" class="text-danger"></span>

                <label asp-for="ListeIngIds" class="control-label"></label>
                <select asp-for="ListeIngIds" asp-items=" @selectIngredients"></select>
                <span asp-validation-for="ListeIngIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.CustomSubmit("Sauvegarder").
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
